<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Kamecenter - Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="author" content="Bluth Company">
  <link rel="shortcut icon" href="assets/favicon.html">
  <link href="assets/bootstrap.css" rel="stylesheet">
  <link href="assets/theme.css" rel="stylesheet">
  <link href="assets/font-awesome.min.css" rel="stylesheet">
  <link href="assets/alertify.css" rel="stylesheet">
  <link rel="Favicon Icon" href="favicon.ico">
  <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet" type="text/css">
  <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>
<div id="wrap">
  <div class="container-fluid">
    <div class="span12">
      <div class="row-fluid" style="float: center; margin-right: 50%; margin-left: 47%;">
        <h3>Bienvenido a <img src="/assets/logo_black.png"></h3>

      </div></div>
    <div class="row-fluid">


        <div class="span6">
        <div class="row-fluid">
          <div class="widget container-narrow">
            <div class="widget-header">
              <i class="icon-user"></i>
              <h5>Ingreso Game Owners</h5>
            </div>
            <div class="widget-body clearfix" style="padding:25px;">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="control-group">
                    <div class="controls">
                      <%= f.email_field :email, autofocus: true, :id => "inputEmail", :placeholder=> "Email", :class=> "btn-block" %>
                    </div>
                  </div>
                  <div class="control-group">
                    <div class="controls">
                      <%= f.password_field :password, autocomplete: "off", :id => "inputPassword", :placeholder=> "Password", :class=> "btn-block" %></div>
                  </div>
                  <div class="control-group">
                    <div class="controls clearfix">
                      <label style="width:auto" class="checkbox pull-left">
                        <% if devise_mapping.rememberable? -%>
                            <%= f.check_box :remember_me %>
                        <% end -%> Recordarme
                      </label>
                    </div>
                  </div>
                  <%= f.submit "Ingresar", :class=>"btn pull-right" %>
              <% end %>
            </div>
          </div>
          <div style="text-align:center">
            <p>Quer√©s registrar tu juego? <a href=" <%=new_registration_path(resource_name)%>">Crear cuenta</a></p>
          </div>
        </div><!--/row-fluid-->



      </div><!--/span10-->

      <div class="span6">
        <div class="row-fluid">
          <div class="widget container-narrow">
            <div class="widget-header">
              <i class="icon-trophy"></i>
              <h5>Ingreso Gamers</h5>
            </div>
            <div class="widget-body clearfix" style="padding:25px;">
              <div style="text-align:center">
                <% if current_user %>
                    Welcome <strong><%= current_user.name %></strong>!
                    <%= link_to "Sign out", signout_path, id: "sign_out" %>
                <% else %>
                    <div style="float: center; margin-left: 0%; margin-right: 0%; ">
                      <%= link_to image_tag("/assets/fb.gif", :border => 0, :alt => '', :title => ''), "/auth/facebook" %>
                    </div>
                <% end %>
              </div>
            </div>
          </div>

        </div><!--/row-fluid-->



      </div><!--/span10-->
    </div><!--/row-fluid-->
  </div><!--/.fluid-container-->
</div><!-- wrap ends-->

<script type="text/javascript" src="code.jquery.com/jquery-latest.js"></script>
<script type="text/javascript" src="ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js"></script>
<script type="text/javascript" src="cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
<script type="text/javascript" src="assets/bootstrap.js"></script>
<script type="text/javascript" src='assets/sparkline.js'></script>
<script type="text/javascript" src='assets/morris.min.js'></script>
<script type="text/javascript" src="assets/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="assets/jquery.masonry.min.js"></script>
<script type="text/javascript" src="assets/jquery.imagesloaded.min.js"></script>
<script type="text/javascript" src="assets/jquery.facybox.js"></script>
<script type="text/javascript" src="assets/jquery.elfinder.min.html"></script>
<script type="text/javascript" src="assets/jquery.alertify.min.js"></script>
<script type="text/javascript" src="assets/realm.js"></script>
</body>
</html>
