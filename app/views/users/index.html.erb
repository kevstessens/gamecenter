          <% if current_user.achievements.count == 0%>
              <div> No tienes logros aún.</div>
          <% else %>
              <% current_user.achievements.last(4).each do |achievement| %>

                      <li>
                        <img src="<%= achievement.image_url(:thumb)%>" class="avatar" style="margin-top: 0px;"/>
                        <div class="comment-bubble">
                          <h4><%= achievement.game.name%> - <strong><%= achievement.name%></strong></h4>
                          <%= achievement.description%>
                        </div>
                      </li>
              <% end %>
          <% end %>
        </ul>
