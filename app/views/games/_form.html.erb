

<% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
        <% @game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<!-- Main window -->



<%unless notice.nil?%>
    <div class="control-group">
      <div class="controls">
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">×</button>
          <strong>Éxito! </strong> <%= notice%>
        </div>
      </div>
    </div>
<%end%>


<%unless alert.nil?%>

<div class="control-group">
  <div class="controls">
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <strong>Error!</strong> <%= alert%>
    </div>
  </div>
</div>
<%end%>


<div class="row-fluid" style="margin-top: 20px;">
<div class="widget widget-padding span12">
  <div class="widget-header">
    <i class="icon-list-alt"></i><h5>Información del juego</h5>
    <div class="widget-buttons">
      <a href="#" data-title="Minimizar" data-collapsed="false" class="tip collapse"><i class="icon-chevron-up"></i></a>
    </div>
  </div>
  <div class="widget-body">
    <div class="widget-forms clearfix">
      <%= form_for @game, :html => { :class => "form-horizontal" } do |f| %>
        <div class="control-group">
          <label class="control-label">Nombre</label>
          <div class="controls">
            <%= f.text_field :name, :class=> "span7", :placeholder=> "Nombre del juego" %><br>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label">Descripción</label>
          <div class="controls">
            <%= f.text_area :description, :class=> "span7", :placeholder=> "Descripción del juego", :style=>"height:100px;", :rows=>5 %>

          </div>
        </div>

          <div class="control-group">
            <label class="control-label">Imagen</label>
            <div class="controls">

              <%= f.file_field :image, :class=> "span7" %>
              <%= f.hidden_field :image_cache %>
            </div>
          </div>

      <div class="widget-footer">
        <%= f.submit "Guardar", :class=>"btn btn-primary" %>
      </div>
      <% end %>

    </div>
  </div>
</div>
</div>
