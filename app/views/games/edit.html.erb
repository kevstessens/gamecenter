<div class="main_container">


<%= render 'form' %>

<div class="row-fluid">
  <div class="widget widget-padding span12">
    <div class="widget-header">
      <i class="icon-check"></i>
      <h5>Logros</h5>
      <div class="widget-buttons">
        <a href="<%= new_achievement_path %>" data-title="Agregar logro" class="tip" ><i class="icon-plus"></i></a>
        <a href="#" data-title="Collapse" data-collapsed="false" class="tip collapse"><i class="icon-chevron-up"></i></a>
      </div>
    </div>
    <div class="widget-body">
      <table id="users" class="table table-striped table-bordered dataTable">
        <thead>
        <tr>
          <th>ID</th>
          <th>Nobre</th>
          <th>Puntos</th>
          <th>Creado en</th>
          <th>Estado</th>
          <th>Opciones</th>
        </tr>
        </thead>
        <tbody>
          <% @achievements.each do |achievement|%>
        <tr>
          <td><%= achievement.id%></td>
          <td><%= achievement.name%></td>
          <td><%= achievement.points%></td>
          <td><%= achievement.created_at.strftime("%d/%m/%y")%></td>
              <%if achievement.active %>
          <td><span class="label label-success">Activo</span></td>
                  <%else%>
                  <td><span class="label label-important">Inactivo</span></td>
            <% end %>

              <%if achievement.active %>

                  <td>Sin opciones</td>
                <%else%>
              <td>
                <div class="btn-group">
                  <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="icon-cog"></i>
                    <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu pull-right">

                  <li><a href="<%=achievements_activate_path(achievement)%>"><i class="icon-eye-open"></i> Habilitar</a></li>
                    <li><a href="<%=edit_achievement_path(achievement)%>"><i class="icon-edit"></i> Editar</a></li>
                    <li><a href="<%=achievement_path(achievement, method: :delete)%>"><i class="icon-trash"></i> Borrar</a></li>
              </ul>

                </div>
              </td>
              <% end %>
        </tr>
              <% end %>
        </tbody>
      </table>
    </div> <!-- /widget-body -->
  </div> <!-- /widget -->
</div>
</div>
